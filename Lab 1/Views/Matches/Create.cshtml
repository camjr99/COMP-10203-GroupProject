@model Lab_1.Models.Match

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Match</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TeamOneID" class="control-label"></label>
                <select asp-for="TeamOneID" class ="form-control" asp-items="ViewBag.TeamOneID"></select>
            </div>
            <div class="form-group">
                <label asp-for="TeamTwoID" class="control-label"></label>
                <select asp-for="TeamTwoID" class ="form-control" asp-items="ViewBag.TeamTwoID"></select>
            </div>
            <div class="form-group">
                <label asp-for="TeamOneScore" class="control-label"></label>
                <input asp-for="TeamOneScore" class="form-control" />
                <span asp-validation-for="TeamOneScore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeamTwoScore" class="control-label"></label>
                <input asp-for="TeamTwoScore" class="form-control" />
                <span asp-validation-for="TeamTwoScore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Arena" class="control-label"></label>
                <select asp-for="Arena" class="form-control" asp-items="ViewBag.Arenas"></select>
            </div>
            <div class="form-group">
                <label asp-for="MatchDate" class="control-label"></label>
                <input asp-for="MatchDate" class="form-control" max="@DateTime.Now.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="MatchDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

